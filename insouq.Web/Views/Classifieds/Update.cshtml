    <script type="text/javascript">
        $.ajax({
            url: `/DropDowns/GetAllAgeByTypeId?typeId=${Classifieds_ID}`,
            method: "GET",
            success: function (response) {
                $.each(response.items, function (i, item) {
                    $("#ageDL").append(`<option value='${item.en_Text}^${item.ar_Text}'>${item.en_Text}</option>`);
                });

                var age = $("#age").val();

                $("#ageDL").val(age);
            },
            error: function (error) {
                alert(error.message);
            }
        });

        $.ajax({
            url: `/DropDowns/GetAllUsageByTypeId?typeId=${Classifieds_ID}`,
            method: "GET",
            success: function (response) {
                $.each(response.items, function (i, item) {
                    $("#usageDL").append(`<option value='${item.en_Text}-${item.ar_Text}'>${item.en_Text}</option>`);

                });

                var usage = $("#usage").val();

                $("#usageDL").val(usage);
            },
            error: function (error) {
                alert(error.message);
            }
        });

        $.ajax({
            url: `/DropDowns/GetAllConditionByTypeId?typeId=${Classifieds_ID}`,
            method: "GET",
            success: function (response) {
                $.each(response.items, function (i, item) {
                    $("#conditionDL").append(`<option value='${item.en_Text}-${item.ar_Text}'>${item.en_Text}</option>`);

                });

                var condition = $("#condition").val();

                $("#conditionDL").val(condition);
            },
            error: function (error) {
                alert(error.message);
            }
        });

        $.ajax({
            url: "/DropDowns/GetAllLocation",
            method: "GET",
            success: function (response) {
                $.each(response.items, function (i, item) {
                    $("#locationDL").append(`<option value='${item.en_Text}-${item.ar_Text}'>${item.en_Text}</option>`);
                });

                var location = $("#location").val();

                $("#locationDL").val(location);
            },
            error: function (error) {
                alert(error.message);
            }
        });



        $.ajax({
            url: `/Categories/GetCategories?typeId=${Classifieds_ID}`,
            method: "GET",
            success: function (response) {
                $.each(response.items, function (i, item) {
                    $("#categoryId").append(`<option value='${item.id}'>${item.en_Name}</option>`);
                });

                var categoryId = $("#cat").val();

                if (categoryId == "") {
                    $("#categoryId").val('0');
                    $("#subCategoryId").val('0');
                    $("#subTypeId").val('0');

                } else {
                    $("#categoryId").val(categoryId);

                    $.ajax({
                        url: `/SubCategories/GetSubCategories?categoryId=${categoryId}`,
                        method: "GET",
                        success: function (response) {
                            $.each(response.items, function (i, item) {
                                $("#subCategoryId").append(`<option value='${item.id}'>${item.en_Name}</option>`);
                            });

                            $("#subCategoryId").append(`<option value='0'>others</option>`);

                            var subCategoryId = $("#subCat").val();

                            if (subCategoryId == "") {
                                $("#subCategoryId").val('0');
                                $("#subTypeId").append(`<option selected value='0'>others</option>`);

                            } else {
                                $("#subCategoryId").val(subCategoryId);

                                $.ajax({
                                    url: `/SubTypes/GetSubTypes?subCategoryId=${subCategoryId}`,
                                    method: "GET",
                                    success: function (response) {
                                        $.each(response.items, function (i, item) {
                                            $("#subTypeId").append(`<option value='${item.id}'>${item.en_Name}</option>`);
                                        });

                                        $("#subTypeId").append(`<option id="othersSubType" value='0'>others</option>`);

                                        var subTypeId = $("#subType").val();

                                        if (subTypeId == "") {
                                            $("#subTypeId").val('0');
                                        } else {
                                            $("#subTypeId").val(subTypeId);
                                        }

                                    },
                                    error: function (error) {
                                        alert(error.message);
                                    }
                                });
                            }

                        },
                        error: function (error) {
                            alert(error.message);
                        }
                    });

                }



            },
            error: function (error) {
                alert(error.message);
            }
        });





    </script>

    <script>

        function onCategoryChange() {
            $("#otherSubCategory").html("");
            $("#otherSubType").html("");
            $("#subCategoryId").val(null);
            $("#subCategoryId option").not(':first').remove();
            $("#subTypeId").val(null);
            $("#subTypeId option").not(':first').remove();

            if ($("#categoryId").val() != "") {
                var categoryId = $("#categoryId").val();
                $.ajax({
                    url: `/SubCategories/GetSubCategories?categoryId=${categoryId}`,
                    method: "GET",
                    success: function (response) {
                        $.each(response.items, function (i, item) {
                            $("#subCategoryId").append(`<option value='${item.id}'>${item.en_Name}</option>`);
                        });

                        $("#subCategoryId").append(`<option value='0'>others</option>`);

                    },
                    error: function (error) {
                        alert(error.message);
                    }
                });

            }
        }

        function onSubCategoryChange() {
            if ($("#subCategoryId").val().toLowerCase() == "0") {
                console.log("asd");
                $("#otherSubCategory").css("display", "block");
                $("#otherSubCategory").html(`<p class="padding-p">
