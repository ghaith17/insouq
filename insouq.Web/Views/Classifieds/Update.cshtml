                        <input type="hidden" value="@Model.SubTypeId" id="subType" />
                        <input type="hidden" value="@Model.Age" id="age" />
                        <input type="hidden" value="@Model.Usage" id="usage" />
                        <input type="hidden" value="@Model.Condition" id="condition" />
                        <input type="hidden" value="@Model.Location" id="location" />


