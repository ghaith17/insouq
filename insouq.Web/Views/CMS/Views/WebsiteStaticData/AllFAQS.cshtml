@model IEnumerable<insouq.Models.StaticData.FAQS>

@{
    ViewData["Title"] = "AllFAQS";
    Layout = "~/Views/Shared/_Layout.cshtml";
}






<style media="screen">
    .dot {
        height: 25px;
        width: 25px;
        background-color: red;
        border-radius: 50%;
        display: inline-block;
        text-align: center;
        color: #fff;
        float: right;
    }
</style>


<div class="row">
    <div class="col-lg-12">
        <div class="panel panel-default">

            <div class="panel-body">

                    <div class="form-group">
                        <x>

                        </x>
                        <x style="float:right;">
                            <a asp-action="FAQS" class="btn btn-success btn-sm"><i class="fa fa-plus"></i></a>
                        </x>
                    </div>
                


                <table class="table table-striped bootstrap-datatable" id="example">
                    <thead class="">
                        <tr>
                            <th><p align="center" class="color">En_Question</p></th>
                            <th><p align="center" class="color">En_Answer</p></th>

                            <th><p align="center" class="color">Ar_Question</p></th>
                            <th><p align="center" class="color">Ar_Answer</p></th>
                            <th><p align="center" class="color">Actions</p></th>
                        </tr>
                    </thead>
                    <hr>


                    <tbody style="padding-top:0px">
                        @foreach (var entity in Model)
                        {
                            <tr align="center" id="@entity.Id">
                                <td>@entity.Question</td>
                                <td>@entity.Answer </td>

                                <td>@entity.Ar_Question</td>
                                <td>@entity.Ar_Answer </td>
                                <td>
                                    <a asp-action="FAQS" asp-route-id="@entity.Id"  class="btn btn-info btn-sm"><i class="fa fa-pencil"></i> </a>
                    

                                    <a onClick="onDelete('@entity.Id')" class="btn btn-danger btn-sm"><i class="fa fa-trash-o"></i> </a>
                                </td>
                            </tr>
                        }

                    </tbody>
                </table>
            </div>
        </div>
    </div><!--/col-->

</div><!--/row-->



@section Scripts {
    <script>
        function onDelete(id) {
            if (confirm("Are you sure you want to delete this FAQ")) {
                $.ajax({
                    url: `/WebsiteStaticData/DeleteFAQS?id=${id}`,
                    method: "DELETE",
                    success: function (response) {
                        if (response) {
                            $(`#${id}`).remove();
                        } else {
                            alert("Not Found");
                        }
                    },
                    error: function (error) {
                        alert(error.message);
                    }
                });
            }
        }
    </script>
}


