
@{
    ViewData["Title"] = "UpsertBanner";
}

@model InsouqWebCMS.Models.UpsertBannerVM

<div class="row mb-2">
    <div class="col-md-2"></div>
    <div class="col-md-8">
        <div class="panel panel-default">
            <div class="panel-heading">
                @if (Model.Banner.Id == 0)
                {
                    <h2 style="color:#000;"><strong>Add</strong> New Item</h2>
                }
                else
                {
                    <h2 style="color:#000;"><strong>Edit</strong> Item</h2>
                }
            </div>
            <div class="panel-body">

                <form asp-action="UpsertBanner" method="POST" enctype="multipart/form-data" name="myForm">
                    @Html.HiddenFor(m => m.Banner.Id)
                    <div class="form-group">
                        <div class="row">
                            <div class="col-md-6">
                                <input required type="text" asp-for="Banner.En_Title" placeholder="Title (ENG)" class="form-control">
                            </div>
                            <div class="col-md-6">
                                <input required type="text" asp-for="Banner.Ar_Title"placeholder="Title (AR)" class="form-control">
                            </div>
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="row">
                            <div class="col-md-6">
                                <textarea required asp-for="Banner.En_Description" rows="6" placeholder="Description (ENG)" class="form-control"></textarea>
                            </div>
                            <div class="col-md-6">
                                <textarea required asp-for="Banner.Ar_Description" rows="6" placeholder="Description (AR)" class="form-control"></textarea>
                            </div>
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="row">
                            <div class="col-md-12">
                                @if (Model.Banner.Id == 0)
                                {
                                    <input required type="file" asp-for="File">
                                }
                                else
                                {
                                    <input type="file" asp-for="File">
                                }
                            </div>
                        </div>
                    </div>

                    <div class="form-group" align="right">
                        <a class="btn btn-danger btn-sm" type="button" asp-action="Banner">Cancel</a>
                        @if (Model.Banner.Id == 0)
                        {
                            <input type="submit" name="save" value="Add Item" class="btn btn-primary btn-sm">
                        }
                        else
                        {
                            <input type="submit" name="save" value="Edit Item" class="btn btn-primary btn-sm">
                        }
                    </div>
                </form>
            </div>
        </div>
    </div>
    <div class="col-md-2"></div>
</div>
