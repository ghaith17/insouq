@model List<insouq.Models.AdPicture>
@using insouq.Shared.Utility


@{
    ViewData["Title"] = "Ads Management";
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewData["ActivePage"] = "Ads";

    int AdsCounter = 1;
}

<style media="screen">
    .col-border {
        border-bottom: 1px solid #dbdbdb;
        margin-bottom: 10px;
    }

    .dot {
        height: 25px;
        width: 25px;
        background-color: red;
        border-radius: 50%;
        display: inline-block;
        text-align: center;
        color: #fff;
        float: right;
    }
</style>

<div class="row mb-2">
    <div class="col-md-2"></div>
    <div class="col-md-8">
        <div class="panel panel-default">
            <div class="panel-heading">
                <h2 style="color:#000;"><strong>Post</strong> images</h2>
            </div>
            <div class="panel-body">
                <div class="form-group">
                    <div class="row">
                        @foreach (var picture in Model)
                        {
                            var imageUrl =picture.ImageURL;

                            <div class="col-md-4">
                                <div class="tz-gallery">
                                    <a class="lightbox" href="@imageUrl">
                                        <img onerror="this.src='/images/defaultAdImage.png'" src="@imageUrl" alt="" style="width:240px; height:240px;">
                                    </a>
                                </div>
                            </div>
                        }
                    </div>
                </div>

                <div class="form-group">
                    <input type="submit" name="save" value="Accept the Post" class="btn btn-success btn-sm">
                    <a class="btn btn-danger btn-sm" type="button" asp-action="Index">Back</a>
                </div>
            </div>
        </div>
    </div>
    <div class="col-md-2"></div>
</div>


