
@{
    ViewData["Title"] = "MonthlySalaries";
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewData["ActivePage"] = "MonthlySalaries";
}

@using insouq.Shared.Utility
@model List<insouq.Models.Dropdownlists.DLMonthlySalary>

<style media="screen">
    .dot {
        height: 25px;
        width: 25px;
        background-color: red;
        border-radius: 50%;
        display: inline-block;
        text-align: center;
        color: #fff;
        float: right;
    }
</style>

<div class="row">
    <div class="col-lg-12">
        <div class="panel panel-default">

            <div class="panel-body">
                <div class="form-group">
                    <x>

                    </x>
                    <x style="float:right;">
                        <a data-toggle="modal" data-target="#myModal" class="btn btn-success btn-sm"><i class="fa fa-plus"></i></a>
                    </x>
                </div>

                <table class="table table-striped bootstrap-datatable" id="example">
                    <thead class="">
                        <tr>
                            <th><p align="center" class="color">Value</p></th>
                            <th><p align="center" class="color">Action</p></th>
                        </tr>
                    </thead>
                    <hr>


                    <tbody style="padding-top:0px">
                        @foreach (var entity in Model)
                        {
                            <tr align="center" id="@entity.Id">
                                <td>@entity.Value</td>
                                <td>
                                    <a onclick="onUpdateButtonClicked(@entity.Id, '@entity.Value')" class="btn btn-info btn-sm"><i class="fa fa-pencil"></i> </a>
                                    <a onClick="onDelete('@entity.Id')" class="btn btn-danger btn-sm"><i class="fa fa-trash-o"></i> </a>
                                </td>
                            </tr>
                        }

                    </tbody>
                </table>
            </div>
        </div>
    </div><!--/col-->

</div><!--/row-->
<!-- The Modal -->
<div class="modal" id="myModal">
    <form class="" asp-action="AddMonthlySalary" method="post">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <x class="modal-title">Add Monthly Salary</x>
                    <button type="button" class="close" data-dismiss="modal">&times;</button>
                </div>
                <!-- Modal body -->
                <div class="modal-body">
                    <div class="form-group">
                        <input type="text" name="value" placeholder="Value " class="form-control input" required>
                    </div>

                </div>


                <div class="modal-footer">
                    <input type="submit" name="save" class="btn btn-success btn-sm" value="Add">
                </div>

            </div>
        </div>
    </form>
</div>
<div class="modal" id="myModals">
    <div class="modal" style="display:block">
        <form class="" asp-action="UpdateMonthlySalary" method="post">
            <input id="hiddenId" name="Id" hidden />
            <div class="modal-dialog">
                <div class="modal-content">
                    <div class="modal-header">
                        <x class="modal-title">Edit Monthly Salary</x>
                        <x style="float:right;">
                            <a style="color:#000;font-size:20px;" href="view0.html" data-dismiss="modal">&times;</a>
                        </x>
                    </div>
                    <!-- Modal body -->
                    <div class="modal-body">
                        <div class="form-group">
                            <input type="text" id="value" name="value" value="text" placeholder="Value" class="form-control">
                        </div>
                    </div>


                    <div class="modal-footer">
                        <input type="submit" name="update" class="btn btn-success btn-sm" value="Update">
                    </div>

                </div>
            </div>
        </form>
    </div>
</div>


@section Scripts {
    <script>
        function onDelete(id) {
            if (confirm("Are you sure you want to delete this monthly salary")) {
                $.ajax({
                    url: `/JobsDL/DeleteMonthlySalary?id=${id}`,
                    method: "DELETE",
                    success: function (response) {
                        if (response.isSuccess) {
                            $(`#${id}`).remove();
                        } else {
                            alert(error.message);
                        }
                    },
                    error: function (error) {
                        alert(error.message);
                    }
                });
            }
        }

        function onUpdateButtonClicked(id, value) {
            $("#hiddenId").val(id);
            $("#value").val(value);
            $("#myModals").modal("show");
        }
    </script>
}