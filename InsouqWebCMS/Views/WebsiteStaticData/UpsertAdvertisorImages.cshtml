
@{
    ViewData["Title"] = "UpsertAdvertisorImages";
}

@model InsouqWebCMS.Models.UpsertAdvirtisorImagesVM

<div class="row mb-2">
    <div class="col-md-2"></div>
    <div class="col-md-8">
        <div class="panel panel-default">
            <div class="panel-heading">
                @if (Model.AdvertisorImages.Id == 0)
                {
                    <h2 style="color:#000;"><strong>Add</strong> New Item</h2>
                }
                else
                {
                    <h2 style="color:#000;"><strong>Edit</strong> Item</h2>
                }
            </div>
            <div class="panel-body">

                <form asp-action="UpsertAdvertisorImages" method="POST" enctype="multipart/form-data" name="myForm">
                    @Html.HiddenFor(m => m.AdvertisorImages.Id)
                    @Html.HiddenFor(m => m.AdvertisorImages.ImageUrl1)
                    @Html.HiddenFor(m => m.AdvertisorImages.ImageUrl2)
                    @Html.HiddenFor(m => m.AdvertisorImages.FileUrl1)
                    @Html.HiddenFor(m => m.AdvertisorImages.FileUrl2)
                    <div class="form-group">
                        <div class="row">
                            @if (Model.AdvertisorImages.Id == 0)
                            {
                                <div class="col-md-6">
                                    <p>Image 1</p>
                                    <input required type="file" asp-for="Image1">
                                </div>
                                <div class="col-md-6">
                                    <p>File 1</p>
                                    <input required type="file" asp-for="File1">
                                </div>
                            }
                            else
                            {
                                <div class="col-md-6">
                                    <p>Image 1</p>
                                    <input type="file" asp-for="Image1">
                                </div>
                                <div class="col-md-6">
                                    <p>File 1</p>
                                    <input type="file" asp-for="File1">
                                </div>
                            }

                        </div>
                    </div>
                    <div class="form-group">
                        <div class="row">
                            @if (Model.AdvertisorImages.Id == 0)
                            {
                                <div class="col-md-6">
                                    <p>Image 2</p>
                                    <input required type="file" asp-for="Image2">
                                </div>
                                <div class="col-md-6">
                                    <p>File 2</p>
                                    <input required type="file" asp-for="File2">
                                </div>
                            }
                            else
                            {
                                <div class="col-md-6">
                                    <p>Image 2</p>
                                    <input type="file" asp-for="Image2">
                                </div>
                                <div class="col-md-6">
                                    <p>File 2</p>
                                    <input type="file" asp-for="File2">
                                </div>
                            }

                        </div>
                    </div>

                    <div class="form-group" align="right">
                        <a class="btn btn-danger btn-sm" type="button" asp-action="AdvertisorImages">Cancel</a>
                        @if (Model.AdvertisorImages.Id == 0)
                        {
                            <input type="submit" name="save" value="Add Item" class="btn btn-primary btn-sm">
                        }
                        else
                        {
                            <input type="submit" name="save" value="Edit Item" class="btn btn-primary btn-sm">
                        }
                    </div>
                </form>
            </div>
        </div>
    </div>
    <div class="col-md-2"></div>
</div>
