
@{
    ViewData["Title"] = "Advertisings";
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewData["ActivePage"] = "Advertisings";
}

@model List<insouq.Models.Advertising>

<style media="screen">
    .dot {
        height: 25px;
        width: 25px;
        background-color: red;
        border-radius: 50%;
        display: inline-block;
        text-align: center;
        color: #fff;
        float: right;
    }
    .color {
        background: #7d6755;
        padding: 20px;
        color: #fff;
        width: 200px;
    }
</style>
<div class="row">
    <div class="col-lg-12">
        <div class="panel panel-default" style="overflow-x: auto">

            <div class="panel-body">

                <table class="table table-striped bootstrap-datatable" id="example">
                    <thead class="">
                        <tr>
                            <th><p align="center" class="color">First Name</p></th>
                            <th><p align="center" class="color">Last Name</p></th>
                            <th><p align="center" class="color">Email</p></th>
                            <th><p align="center" class="color">Phone</p></th>
                            <th><p align="center" class="color">Company</p></th>
                            <th><p align="center" class="color">Advertising Budget</p></th>
                            <th><p align="center" class="color">Action</p></th>
                        </tr>
                    </thead>
                    <hr>


                    <tbody style="padding-top:0px">
                        @foreach (var entity in Model)
                        {
                            <tr align="center" id="@entity.Id">
                                <td>@entity.FirstName</td>
                                <td>@entity.LastName </td>
                                <td>@entity.Email </td>
                                <td>@entity.Phone </td>
                                <td>@entity.Company </td>
                                <td>@entity.AdvertisingBudget.En_Text </td>
                                <td>
                                    <a onClick="onDelete('@entity.Id')" class="btn btn-danger btn-sm"><i class="fa fa-trash-o"></i> </a>
                                </td>
                            </tr>
                        }

                    </tbody>
                </table>
            </div>
        </div>
    </div><!--/col-->

</div><!--/row-->



@section Scripts {
    <script>
        function onDelete(id) {
            if (confirm("Are you sure you want to delete this advertising")) {
                $.ajax({
                    url: `/WebsiteStaticData/DeleteAdvertisings?id=${id}`,
                    method: "DELETE",
                    success: function (response) {
                        if (response) {
                            $(`#${id}`).remove();
                        } else {
                            alert("Not Found");
                        }
                    },
                    error: function (error) {
                        alert(error.message);
                    }
                });
            }
        }
    </script>
}