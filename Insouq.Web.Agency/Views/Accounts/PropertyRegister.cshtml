                                            <input class="agency-pas1" type="text" name="ReraListerCompanyName" placeholder="RERA lister company name" asp-for="ReraListerCompanyName" required>
                                            <input class="agency-pas1" type="text" name="ReraPermitNumber" placeholder="RERA permit number" asp-for="ReraPermitNumber" onkeypress="return isNumberKey(event)" required>
                                            <input class="agency-pas1" type="text" name="ReraAgentName" placeholder="RERA agent name" asp-for="ReraAgentName" required>

                                        </div>
                                        <div class="padding-form7">
                                            <button type="submit" name="button">Next</button>
                                        </div>
