<script type="text/javascript">
    function isNumberKey(evt) {
        var charCode = (evt.which) ? evt.which : event.keyCode;
        if (charCode != 46 && charCode > 31
            && (charCode < 48 || charCode > 57))
            return false;

        return true;
    }

    $('#file-input1').change(function () {
        var fileInput =
            document.getElementById('file-input1');

        var filePath = fileInput.value;

        // Allowing file type
        var allowedExtensions =
            /(\.jpg|\.jpeg|\.PNG|\.gif |\.docx)$/i;

        if (!allowedExtensions.exec(filePath)) {
            // alert('Invalid file type for Broker Card Copy.');
            // fileInput.value = '';
            return false;
        }
        else {
            var i = $(this).prev('label').clone();
            var file = $('#file-input1')[0].files[0].name;
            //   $(this).prev('label').text(file);
            $("#TradeLicenseCopyText").text(file);
            //alert('Broker Card Copy File Uploaded ' + file);
        }
    });


    $('#file-input2').change(function () {
        var fileInput =
            document.getElementById('file-input2');

        var filePath = fileInput.value;

        // Allowing file type
        var allowedExtensions =
            /(\.jpg|\.jpeg|\.PNG|\.gif |\.docx)$/i;

        if (!allowedExtensions.exec(filePath)) {

            //alert('Invalid file type for Trade License Copy');
            //fileInput.value = '';
            return false;
        }
        else {
            var i = $(this).prev('label').clone();
            var file = $('#file-input2')[0].files[0].name;
            //   $(this).prev('label').text(file);
            $("#BrokerCardCopyText").text(file);

        }
    });

</script>

